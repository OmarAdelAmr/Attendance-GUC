<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.example.almgohar.iottrilaterationproject.TAViewActivity">


    <Button
        android:id="@+id/buttonShowScheduleTA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Schedule"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="215dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="110dp"
        android:layout_marginRight="215dp"/>



    <Button
        android:id="@+id/buttonLogoutTA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:text="Logout"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="15dp"
        app:layout_constraintRight_toRightOf="@+id/buttonShowScheduleTA"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="37dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonShowScheduleTA"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TA View"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="26dp"
        android:layout_marginTop="54dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/buttonShowScheduleTA"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="26dp"/>

    <Button
        android:id="@+id/buttonShowAttendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show attendance"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/buttonShowScheduleTA"
        app:layout_constraintRight_toRightOf="@+id/buttonShowScheduleTA"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="44dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonShowScheduleTA"/>

    <Button
        android:id="@+id/buttonCancelTut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Tutorial"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="162dp"/>
</android.support.constraint.ConstraintLayout>
